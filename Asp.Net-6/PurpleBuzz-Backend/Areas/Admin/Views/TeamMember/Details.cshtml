@using PurpleBuzz_Backend.Models
@model TeamMember

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group ">
                            <div class="d-flex justify-content-center"><img src="~/assets/img/@Model.PhotoPath" /></div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input class="form-control" asp-for="Name" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="Surname">Surname</label>
                            <input class="form-control" asp-for="Surname" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="Position">Position</label>
                            <input class="form-control" asp-for="Position" disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>